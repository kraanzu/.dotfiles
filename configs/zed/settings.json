{
  // Essentials
  "soft_wrap": "editor_width",
  "relative_line_numbers": "enabled",
  "vim_mode": true,
  "vim": {
    "highlight_on_yank_duration": 500,
    "use_smartcase_find": true
  },

  // Minimal Bar
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "button": false
  },
  "terminal": {
    "button": false
  },
  "search": {
    "button": false
  },

  // Eye candy
  "icon_theme": "Material Icon Theme",
  "theme": {
    "mode": "dark",
    "light": "Nord",
    "dark": "Nord"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "tabs": {
    "file_icons": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },

  // UI & Buffer Fonts
  "ui_font_size": 14,
  "ui_font_weight": 500,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 500,
  "buffer_font_size": 16,
  "buffer_line_height": {
    "custom": 1.5
  },

  // Diagnostics
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },

  "languages": {
    "Python": {
      "tab_size": 4,
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },

  // LSP Settings
  "show_completions_on_input": true,

  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },

  // Copilot settings
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-haiku-4.5"
    },
    "button": false,
    "default_profile": "ask",
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    }
  },
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Extensions
  "auto_install_extensions": {
    "git-firefly": true,
    "material-icon-theme": true,
    "golangci-lint": true,
    "rainbow-csv": true,

    // languages
    "html": true,
    "markdown": true,
    "fish": true,
    "lua": true,
    "nix": true,
    "scheme": true,
    "dockerfile": true,

    "toml": true
  }
}
