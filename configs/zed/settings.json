{
  // Essentials
  "vim_mode": true,

  // Minimal Bar
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "button": false
  },
  "terminal": {
    "button": false
  },
  "search": {
    "button": false
  },

  // Eye candy
  "icon_theme": "Material Icon Theme",
  "theme": {
    "mode": "dark",
    "light": "Nord",
    "dark": "Nord"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "tabs": {
    "file_icons": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },

  // UI & Buffer Fonts
  "ui_font_size": 14,
  "ui_font_weight": 500,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 500,
  "buffer_font_size": 16,
  "buffer_line_height": {
    "custom": 1.5
  },

  // Diagnostics
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },

  // Lanugage Specific
  "languages": {
    "Python": {
      "tab_size": 4,
      "language_servers": ["pyright"],
      "formatter": "language_server"
    }
  },

  // LSP Settings
  "show_completions_on_input": true,

  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },

  // Copilot settings
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "button": false,
    "default_profile": "ask",
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Extensions
  "auto_install_extensions": {
    // nice
    "git-firefly": true,
    "material-icon-theme": true,
    "golangci-lint": true,
    "rainbow-csv": true,

    // languages
    "html": true,
    "markdown": true,
    "fish": true,
    "lua": true,
    "nix": true,
    "scheme": true,
    "dockerfile": true,

    "toml": true,
    "ruff": true,
    "pylsp": true
  }
}
