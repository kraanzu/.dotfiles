// Zed keymap
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "super-i": "workspace::ToggleRightDock",
      "super-b": "workspace::ToggleLeftDock",
      "super-m": "workspace::ToggleBottomDock",
      "super-e": "project_panel::ToggleFocus",
      "ctrl-up": ["task::Spawn", { "task_name": "Neogit" }],
      "super-g": ["agent::NewExternalAgentThread", { "agent": "gemini" }]
    }
  },
  {
    "context": "GitPanel && ChangesList",
    "use_key_equivalents": true,
    "bindings": {
      "s": "git::ToggleStaged"
    }
  },
  {
    "bindings": {
      "ctrl-,": "zed::OpenSettingsFile"
    }
  },
  {
    "bindings": {
      "ctrl-alt-,": "zed::OpenSettings"
    }
  }
]
